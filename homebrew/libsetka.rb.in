class Libsetka < Formula
  desc "C++ cross-platform network library."
  homepage "https://github.com/igagis/setka"
  url "https://github.com/igagis/setka/archive/$(version).tar.gz"
  sha256 "$(sha256)"

  depends_on "prorab" => :build
  depends_on "libnitki" => :build
  depends_on "libpogodi" => :build
  depends_on "libutki"
  depends_on "libaika" => :build
  depends_on "libpapki" => :build

  def install
    ENV['PATH'] += ':/usr/local/bin'
    system "make", "install", "PREFIX=#{prefix}"
    system "rm", "#{prefix}/bin/tests"
    system "rm", "#{prefix}/include/dummy.hpp"
  end

  #test do
  #  system "make", "test"
  #end
end

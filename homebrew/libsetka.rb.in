class Libsetka < Formula
  desc "C++ cross-platform network library."
  homepage "https://github.com/igagis/setka"
  url "https://github.com/igagis/setka/archive/$(version).tar.gz"
  sha256 "$(sha256)"

  depends_on "prorab" => :build
  depends_on "libnitki"
  depends_on "libpogodi"
  depends_on "libutki"
  depends_on "libaika"

  def install
    ENV['PATH'] += ':/usr/local/bin'
    system "make", "install"
  end

  #test do
  #  system "make", "test"
  #end
end

nuget{
	nuspec{
		id = libsetka;
		version : $(version);
		title: C++ network library;
		authors: {Ivan Gagis};
		owners: {Ivan Gagis};
		licenseUrl: "https://raw.githubusercontent.com/igagis/setka/master/LICENSE";
		projectUrl: "https://github.com/igagis/setka";
		iconUrl: "https://github.com/igagis/setka/blob/master/logo.svg";
		requireLicenseAcceptance:false;
		summary: C++ network library;

		description: @"C++ network library";
		releaseNotes: "Initial release";
		copyright: Copyright 2015 Ivan Gagis;
		tags: { native};
	}
	dependencies {
		packages : {
			libutki/1.0.8.4;
			libpogodi/1.0.1.8;
			libnitki/1.0.1.6;
			libaika/1.0.1.3;
		};
	}
	files {
		//this is needed to put headers in the base folder
		nestedInclude: {
			#destination = ${d_include}setka;
			"..\src\setka\**\*.hpp"
		};
		
		[x86,release] { 
			lib: ..\msvs_solution\Release\libsetka.lib;
			symbols: ..\msvs_solution\libsetka\Release\libsetka.pdb;
		}

		[x86,debug] { 
			lib: ..\msvs_solution\Debug\libsetka.lib;
			symbols: ..\msvs_solution\libsetka\Debug\libsetka.pdb;
		}

		[x64,release] { 
			lib: ..\msvs_solution\x64\Release\libsetka.lib;
			symbols: ..\msvs_solution\libsetka\x64\Release\libsetka.pdb;
		}

		[x64,debug] { 
			lib: ..\msvs_solution\x64\Debug\libsetka.lib;
			symbols: ..\msvs_solution\libsetka\x64\Debug\libsetka.pdb;
		}  
	}
}
